@{
    ViewBag.Title = "Restaurant List";
}

<center>
    <div class="text-center">
        <h3>Here are the restaurants that have been submitted</h3>
        <table>
            <thead>
                <tr>
                    <th>Submitter's Name</th>
                    <th>Restaurant Name</th>
                    <th>Favorite Dish</th>
                    <th>Restaurant Phone Number</th>
                </tr>
            </thead>

            <tbody>
                @foreach (Assignment4.Models.RestaurantInput ri in Model)
                {
                    <tr>
                        <td>@ri.Name</td>
                        <td>@ri.RestaurantName</td>
                        <td>@ri.FavoriteDish</td>
                        <td>@ri.Phone</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</center>