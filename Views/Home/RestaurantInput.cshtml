@{
    ViewBag.Title = "Submit a Restaurant You Like!";
}

@model Assignment4.Models.RestaurantInput

<div>
    <form asp-action="RestaurantInput" method="post">
        <div>
            <label asp-for="Name">Your Name:</label>
            <input asp-for="Name" />
        </div>

        <div>
            <label asp-for="RestaurantName">Name of the Restaurant:</label>
            <input asp-for="RestaurantName" />
        </div>

        <div>
            <label asp-for="FavoriteDish">Your favorite dish at that restaurant:</label>
            <input asp-for="FavoriteDish" />
        </div>

        <div>
            <label asp-for="Phone">Restaurant's phone number:</label>
            <input asp-for="Phone" />
        </div>

        <button type="submit">Submit</button>

        <div asp-validation-summary="All"></div>
    </form>
</div>
